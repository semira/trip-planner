		function locationHandler(location) {
			//$('#location').html ="<img src='http://maps.google.com/staticmap?center=" + location.coords.latitude + "," + location.coords.longitude + "&size=300x200&maptype=hybrid&zoom=16&key=YOURGOOGLEAPIKEY' />";
			longitude = location.coords.longitude;
			latitude = location.coords.latitude;
			$('#location').html("Location: " + longitude + ', ' + latitude  + ' (' + location.coords.accuracy + ')');
		}
		navigator.geolocation.getCurrentPosition(locationHandler);
		
		$(document).ready(function() {
			
			$('#carousel-app').carousel({
			  interval: false,
			  wrap: false
			});
			
			$('#find-btn')
			    .click(function () {
			        var btn = $(this)
			        btn.button('loading')
			        setTimeout(function () {
			            btn.button('reset')
			        }, 10000);
					var call = $.ajax({
						url: "test_search.js",
					 	data: { lat: latitude, long: longitude },
						beforeSend: function() {
						    $('#places-results').removeClass('hidden');
						  }
					})
					.done(function() {
						$('.place-result').detach();
						btn.button('reset');
					});
			    });
		});
	</script>
<% end %>

