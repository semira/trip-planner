<div class='day-card-wrapper'>
	  <div class="day-date-wrapper">
			<span class="day-date" data-date="" data-elementID='date-1'></span>
			<% if day_counter == 0 %>
				<span class="fa fa-calendar" id="startDatepicker" ></span>
			<% end %>
	  </div>
	  <div class="card day-card" data-itemnum='<%= day.id %>'>
		<div class="city">
			<h4 data-elementID="city-1"><%= day.city %></h4>
		</div>
		<div class="notes">
			<small><p data-elementID="notes-1" data-rows='8'>
				<%= day.notes %>
			</p></small>
		</div>
		<div class="hotel">
			<p data-elementID="hotel-1"><%= day.hotel %></p>
		</div>
	  </div>
</div>